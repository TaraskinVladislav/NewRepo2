<Window x:Class="WeddingAgency.AddClientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Register Client" Height="300" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Name:" />
            <TextBox x:Name="ClientNameTextBox" />
            <TextBlock Text="Contact Details:" Margin="0,10,0,0"/>
            <TextBox x:Name="ClientContactDetailsTextBox" />
            <Button Content="Register" Margin="0,20,0,0" Click="RegisterClientButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
