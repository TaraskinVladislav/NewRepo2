<Window x:Class="Wedding.Agency.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Вход в Свадебное агентство" Height="400" Width="600">
    <Grid Background="#FFC0CB">
        <Border MinWidth="300" Margin="25" Background="White" VerticalAlignment="Center" Padding="30" MaxWidth="450" CornerRadius="20">
            <StackPanel>
                <TextBlock Text="Добро пожаловать!" FontSize="24" FontWeight="Bold" Margin="0 0 0 20" />
                <TextBox Placeholder="Имя пользователя" Margin="0 0 0 10"/>
                <PasswordBox Placeholder="Пароль" Margin="0 0 0 10"/>
                <Button Content="Войти" HorizontalAlignment="Center" Width="100"/>
                <TextBlock Text="Или" HorizontalAlignment="Center" Margin="0 20"/>
                <Button Content="Зарегистрироваться" HorizontalAlignment="Center" Width="150"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>

