<Window x:Class="WeddingAgency.AddEmployeeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Register Employee" Height="300" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Name:" />
            <TextBox x:Name="EmployeeNameTextBox" />

            <TextBlock Text="Position:" Margin="0,10,0,0"/>
            <TextBox x:Name="EmployeePositionTextBox" />

            <Button Content="Register" Margin="0,20,0,0" Click="RegisterEmployeeButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
